<?xml version="1.0" encoding="UTF-8" ?>

<beans 
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

	<!-- 
		/properties/web/controllers.xml
		This file declares the visual beans used by the web interface.
		It should not be modified but by the developers.
		This file is referenced by /properties/applicationContext.xml.
	-->
	
	<bean id="userPaginator"
		class="org.esupportail.todolist.web.beans.UserPaginator"
		scope="session"
    	>
		<description>A bean to manage the welcome page.</description>
		<property name="domainService" ref="paginatorDomainService"/>
	</bean>
	<bean id="publicTasksPaginator"
		class="org.esupportail.todolist.web.beans.PublicTasksPaginator"
		scope="session"
    	>
		<description>A bean to manage the welcome page.</description>
		<property name="domainService" ref="domainService"/>
	</bean>
	<bean id="userTasksPaginator"
		class="org.esupportail.todolist.web.beans.UserTasksPaginator"
		scope="session"
    	>
		<description>A bean to manage the welcome page.</description>
		<property name="domainService" ref="domainService"/>
	</bean>
	<bean id="tasksPaginator"
		class="org.esupportail.todolist.web.beans.TasksPaginator"
		scope="session"
    	>
		<description>A bean to manage the welcome page.</description>
		<property name="domainService" ref="domainService"/>
	</bean>
	<bean id="userBean" class="org.esupportail.todolist.web.beans.UserBean"
		scope="request" />
	<bean id="taskForm" class="org.esupportail.todolist.domain.beans.Task"
		scope="session" />
</beans>
