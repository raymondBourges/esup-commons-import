<?xml version="1.0" encoding="UTF-8" ?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd">

    <!-- 
        /properties/domain/domain.xml
        The configuration file for domain services.
        This file is referenced by /properties/applicationContext.xml.
    -->

	<bean id="domainService" class="org.esupportail.example.domain.DomainServiceImpl">
        <property name="firstAdmin" value="${firstAdmin}" />
        <property name="daoService" ref="daoService" />
        <property name="ldapUserService" ref="ldapUserService" />
        <property name="staffFilter" value="${staffFilter}" />
	</bean>

</beans>
