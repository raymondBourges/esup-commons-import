<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>

<installation version="1.0">

    <!-- 
        The info section.
        The meaning of the tags should be natural ...
    -->
    <info>
        <appname>ChainEdit</appname>
        <appversion>Demonstration</appversion>
        <authors>
	  <author name="CIRM Université de Rennes 1" email="chainedit_admin@cru.fr"/>
        </authors>
        <url>http://www.chainedit.fr</url>
	<javaversion>1.6</javaversion>
    </info>
    
    <!-- 
        The gui preferences indication.
        Sets the installer window to 900x600. 
	It will not be able to change the size.
    -->
    <guiprefs width="900" height="600" resizable="no"/>
    
    <native type="izpack" name="ShellLink.dll"/>

    <!-- 
        The locale section.
        Asks here to include the English and French langpacks.
    -->
    <locale>
        <langpack iso3="fra"/>
    </locale>
    
    <!-- 
        The resources section.
        The ids must be these ones if you want to use the LicencePanel and/or the InfoPanel.
    -->
    <resources>
        <res id="LicencePanel.licence" src="Licence.txt"/>
        <res id="InfoPanel.info" src="LisezMoi.txt"/>
	<res id="Installer.image" src="logo_chainedit.gif" />
	<res id="shortcutSpec.xml" src="shortcutSpec.xml" />
	<res id="TargetPanel.dir.windows" src="targetPanelDirWindows.txt" />
    </resources>

    <!-- 
        The panels section.
        We indicate here which panels we want to use. The order will be respected.
    -->
    <panels>
    	<panel classname="HelloPanel" />
    	<panel classname="InfoPanel" />
    	<panel classname="LicencePanel" />
    	<panel classname="TargetPanel" />
    	<panel classname="PacksPanel" />
    	<panel classname="InstallPanel" />
    	<panel classname="ShortcutPanel" />
    	<panel classname="SimpleFinishPanel" />
    </panels>

    <!-- 
        The packs section.
        We specify here our packs.
    -->
    <packs>
        <pack name="Apache Tomcat" required="yes">
            <description>Le serveur d'Application Apache Tomcat</description>
            <file src="LisezMoi.txt" targetdir="$INSTALL_PATH"/>
            <file src="Licence.txt" targetdir="$INSTALL_PATH"/>
            <file src="apache-tomcat-5.5.23" targetdir="$INSTALL_PATH"/>
	    <file src="webapps/ROOT" targetdir="$INSTALL_PATH/webapps"/> <!-- Reccursive adding -->
	    <file src="lisezmoi" targetdir="$INSTALL_PATH"/> <!-- Reccursive adding -->
	    <parsable targetfile="$INSTALL_PATH/apache-tomcat-5.5.23/bin/service.bat"/>
	    <executable targetfile="$INSTALL_PATH/apache-tomcat-5.5.23/bin/startup.sh" os="unix"/>
	    <executable targetfile="$INSTALL_PATH/apache-tomcat-5.5.23/bin/shutdown.sh" os="unix"/>
	    <executable targetfile="$INSTALL_PATH/apache-tomcat-5.5.23/bin/catalina.sh" os="unix"/>
	    <executable targetfile="$INSTALL_PATH/apache-tomcat-5.5.23/bin/setclasspath.sh" os="unix"/>
	    <executable targetfile="$INSTALL_PATH/apache-tomcat-5.5.23/bin/service.bat" os="windows" stage="postinstall" keep="true">
	      <args>
		<arg value ="remove"/>
		<arg value ="Tomcat5Chainedit"/>
	      </args>
	    </executable>
	    <executable targetfile="$INSTALL_PATH/apache-tomcat-5.5.23/bin/service.bat" os="windows" stage="postinstall" keep="true">
	      <args>
		<arg value ="install"/>
		<arg value ="Tomcat5Chainedit"/>
	      </args>
	    </executable>
	    <executable targetfile="$INSTALL_PATH/apache-tomcat-5.5.23/bin/service.bat" os="windows" stage="uninstall" keep="true">
	      <args>
		<arg value="remove"/>
		<arg value ="Tomcat5Chainedit"/>
	      </args>
	    </executable>
        </pack>
	
        <pack name="chainEdit" required="yes">
            <description>ChainEdit</description>
            <file src="webapps/chainedit" targetdir="$INSTALL_PATH/webapps"/> 
            <file src="chartes" targetdir="$INSTALL_PATH/"/> 
            <file src="configs" targetdir="$INSTALL_PATH/"/> 
            <file src="projets" targetdir="$INSTALL_PATH/"/> 
            <file src="temp" targetdir="$INSTALL_PATH/"/> 
	    	<parsable targetfile="$INSTALL_PATH/webapps/chainedit/WEB-INF/classes/properties/config.properties" type="javaprop" />  
        </pack>
    </packs>
    
</installation>
